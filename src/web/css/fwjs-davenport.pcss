main nav ul {
    list-style-type: none;
}

main nav ul li {
    display: inline-block;
    margin-right: 1rem;
}

main nav ul li button {
    border-radius: 1rem;
    border: 1px solid black;
    color: white;
    cursor: pointer;
    background-color: green;
}

main nav ul li button.inactive {
    background-color: lightcoral;
    color: gray;
    cursor: not-allowed;
}

#players {
    list-style-type: none;
}

#players li {
    display: flex;
    flex-direction: row;
    align-items: center;
}

#players li .card-listing {
    display: flex;
    flex-direction: row;
}