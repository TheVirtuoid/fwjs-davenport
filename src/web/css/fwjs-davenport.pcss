:root {
    --card-size-width: 5rem;
    --card-size-height: 8rem;
    --cell-size-width: var(--card-size-width);
    --cell-size-height: var(--card-size-height);
    --cell-horizontal-offset: -3rem;
    --cell-vertical-offset: -6rem;
    --card-font-size: 1.5rem;
}

textarea {
    width: 50rem;
    height: 15rem;
    font-family: monospace;
    font-size: 12px;
}

#pitch {
    display: grid;
    grid-template-columns: repeat(8, var(--cell-size-width));
    grid-template-rows: repeat(8, var(--cell-size-height));
    column-gap: .5rem;
    row-gap: .5rem;
}

#pitch .player0 {
    grid-column-start: 3;
    grid-column-end: 7;
    grid-row-start: 1;
    grid-row-end: 2;
    background-color: green;
    align-self: center;
}

#pitch .player0-locked {
    grid-column-start: 3;
    grid-column-end: 7;
    grid-row-start: 2;
    grid-row-end: 3;
    background-color: orange;
}

#pitch .player2 {
    grid-column-start: 3;
    grid-column-end: 7;
    grid-row-start: 8;
    grid-row-end: 9;
    background-color: purple;
}

#pitch .player2-locked {
    grid-column-start: 3;
    grid-column-end: 7;
    grid-row-start: 7;
    grid-row-end: 8;
    background-color: blue;
}

#pitch .player1 {
    grid-column-start: 8;
    grid-column-end: 9;
    grid-row-start: 3;
    grid-row-end: 7;
    background-color: red;
}

#pitch .player1-locked {
    grid-column-start: 7;
    grid-column-end: 8;
    grid-row-start: 3;
    grid-row-end: 7;
    background-color: pink;
}

#pitch .player3 {
    grid-column-start: 1;
    grid-column-end: 2;
    grid-row-start: 3;
    grid-row-end: 7;
    background-color: yellow;
}

#pitch .player3-locked {
    grid-column-start: 2;
    grid-column-end: 3;
    grid-row-start: 3;
    grid-row-end: 7;
    background-color: brown;
}

#pitch div {
    border: 1px solid black;
    display: flex;
}

#pitch div.row {
    flex-direction: row;
}

#pitch div.column {
    flex-direction: column;
}


#pitch .player0 .card, #pitch .player2 .card {
    margin-left: var(--cell-horizontal-offset);
}

#pitch .player0 .card:first-child, #pitch .player2 .card:first-child {
    margin-left: 0;
}

#pitch .player1 .card, #pitch .player3 .card {
    margin-top: var(--cell-vertical-offset);
}

#pitch .player1 .card:first-child, #pitch .player3 .card:first-child {
    margin-top: 0;
}

.card {
    width: var(--card-size-width);
    height: var(--card-size-height);
    min-width: var(--card-size-width);
    min-height: var(--card-size-height);
    max-height: var(--card-size-height);
    max-width: var(--card-size-width);
    display: inline-block;
    border: 3px solid black;
    background-color: white;
    border-radius: 1rem;
    padding: .25rem;
    font-size: var(--card-font-size);
    font-family: sans-serif;
    font-weight: bold;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.card.heart, .card.diamond {
    color: red;
}

.card.club, .card.spade {
    color: black;
}

.card span:first-child {
    align-self: flex-start;
}

.card span:last-child {
    align-self: flex-end;
}

.card span:nth-child(2) {
    flex-grow: 2;
    font-size: 2em;
}

.card.back {
    background: rgb(2,0,36);
    background: radial-gradient(circle, rgba(2,0,36,1) 0%, rgba(9,19,121,0.6558998599439776) 35%, rgba(0,212,255,1) 100%);
}

.card-listing {
    min-width: calc(var(--card-size-width) * 7);
}


